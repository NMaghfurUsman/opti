{
  "name": "opti",
  "version": "1.1.0",
  "description": "simple image viewer",
  "main": "main.js",
  "scripts": {
    "start": "set NODE_ENV=development&&electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": "torcado",
  "license": "ISC",
  "devDependencies": {
    "electron": "^5.0.4",
    "electron-builder": "^20.44.4",
    "electron-reload": "^1.4.0"
  },
  "dependencies": {
    "datauri": "git+https://git@github.com/torcado194/datauri.git",
    "file-type": "^12.0.0",
    "mime-types": "^2.1.24"
  },
  "build": {
    "directories": {
      "output": "./dist"
    },
    "files": [
      "!**/_*",
	  "!./dist/*"
    ],
    "appId": "com.electron.opti",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    }
  }
}
