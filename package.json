{
  "name": "opti",
  "version": "1.0.2",
  "description": "simple image viewer",
  "main": "main.js",
  "scripts": {
    "start": "set NODE_ENV=development&&electron .",
	"pack": "build --dir",
    "dist": "build"
  },
  "author": "torcado",
  "license": "ISC",
  "devDependencies": {
    "electron": "^5.0.4",
    "electron-builder": "^20.44.4",
    "electron-reload": "^1.4.0"
  },
  "dependencies": {
    "datauri": "^2.0.0"
  },
  "build": {
    "appId": "com.electron.opti",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    }
  }
}
